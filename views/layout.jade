doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
      div
          div#navBar
            img.logo(src='/images/HerzogLogoShadow.png')
            br
            - if (!hideNav)
                a(href='/whiteboard') Whiteboard
                a(href='/manage') Manage
                a(href='/manage/inactive') Inactive Scopes
                - if (!!viewModel && !!viewModel.settings && !!viewModel.settings.isAdminMode)
                    a(href='/adduser') Add User
                a(href='/logout') Logout

          div#content
            block content
